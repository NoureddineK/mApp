<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlayerActivity"
    android:windowSoftInputMode="adjustResize|stateVisible"
    android:screenOrientation="portrait">

    <TextView
        android:id="@+id/label_player"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="@dimen/input_team_width"
        android:layout_height="@dimen/text_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/input_pseudo_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/player_name"
        android:layout_width="170dp"
        android:layout_height="@dimen/input_team_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:hint="Name ..."
        android:inputType="text"
        android:maxLength="25"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/team_choice"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_player" />

    <Spinner
        android:id="@+id/team_choice"
        android:layout_width="101dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view"
        app:layout_constraintEnd_toStartOf="@+id/plus_button"
        app:layout_constraintTop_toBottomOf="@+id/label_player"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/plus_button"
        android:layout_width="@dimen/plus_button_width"
        android:layout_height="@dimen/input_team_height"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text=" + "
        android:onClick="addingPlayers"
        android:textCursorDrawable="@color/colorAccent"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_player"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="@dimen/input_team_width"
        android:layout_height="193dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/topic_choice_spinner"
        app:layout_constraintEnd_toStartOf="@+id/plus_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/team_name"
        app:layout_constraintTop_toBottomOf="@+id/player_name"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/validate_players"
        android:layout_width="@dimen/text_height"
        android:layout_height="@dimen/text_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="validatePlayers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_choice_spinner"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/check_button" />

    <Button
        android:id="@+id/take_picture_btn"
        android:layout_width="@dimen/plus_button_width"
        android:layout_height="@dimen/input_team_height"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/photo"
        android:layout_marginBottom="8dp"
        android:onClick="takeAphoto"
        app:layout_constraintBottom_toTopOf="@+id/validate_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/plus_button"
        app:layout_constraintVertical_bias="0.031" />

    <Spinner
        android:id="@+id/topic_choice_spinner"
        android:layout_width="194dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/validate_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toEndOf="@+id/topic_label"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <TextView
        android:id="@+id/topic_label"
        android:layout_width="73dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Choice a Topic"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@+id/topic_choice_spinner"
        app:layout_constraintBottom_toBottomOf="@+id/topic_choice_spinner"
        app:layout_constraintBottom_toTopOf="@+id/validate_players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>